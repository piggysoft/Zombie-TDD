{
  "paths": [
    "lib/*.js",
    "test/*.js"
  ],
  "linterOptions": {
    "indent": 2,
    "onevar": false,
    "maxlen": 85,
    "strict": true,
    "predef": [
      "ZOMBIE", 
      "testCase", 
      "sinon", 
      "assertObject", 
      "assertPrototype", 
      "assertEquals", 
      "assertException",
      "assertTypeError",
      "fail"
    ]
  }
}